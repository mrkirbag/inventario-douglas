        display: flex;
        align-items: center;
        justify-content: center;
        height: 30px;
        width: 35px;
        border-radius: 50%;
        cursor: pointer;
        font-weight: bold;
        color: #fff;

        &:hover {
            background-color: #4b4b8a;
        }
    }

    .modulo-agregar-cliente, .modulo-agregar-producto {
        display: flex;
        flex-direction: column;
        padding: 1rem;
