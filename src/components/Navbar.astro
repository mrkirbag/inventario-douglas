<div class="navbar-wrapper">
    <button class="toggle-btn" id="toggleMenu">☰</button>
    <nav class="sidebar" id="sidebar">
        <h2>📊 Panel</h2>
        <a href="/">🏠 Inicio</a>
        <a href="/tasa">💱 Tasa del Día</a>
        <a href="/clientes">👥 Clientes</a>
        <a href="/productos">📦 Productos</a>
        <a href="/ventas">🧾 Ventas</a>
        <a href="/reportes" style="pointer-events: none; opacity: 0.6;">📈 Reportes</a>
        <a href="/usuarios">⚙️ Usuarios</a>
    </nav>
</div>

<style>
    .navbar-wrapper {
        display: flex;
        flex-direction: column;
    }

    .toggle-btn {
        display: none; 
        color: #111827;
        background: transparent;
        font-size: 3rem;
        padding: .5rem;
        border: none;
        cursor: pointer;
        position: fixed;
        top: 0;
        right: 0;
        z-index: 1000;
        border-radius: 8px;
    }

    .sidebar {
        width: 180px;
        min-height: 100vh;
        background-color: #1f2937;
        color: white;
        padding: 2rem 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        transition: transform 0.3s ease;
    }

    .sidebar a {
        color: white;
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        transition: background-color 0.2s ease;
    }

    .sidebar a:hover {
        background-color: #374151;
    }

    .sidebar h2 {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
    }

    @media (max-width: 768px) {
        .toggle-btn {
            display: block;
        }

        .sidebar {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            height: 100vh;
            z-index: 999;
            background-color: #1f2937;
        }

        .sidebar.active {
            transform: translateX(0);
        }
    }
</style>

<script type="module" is:inline>
    const toggleBtn = document.getElementById('toggleMenu');
    const sidebar = document.getElementById('sidebar');

    toggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('active');
    });
</script>